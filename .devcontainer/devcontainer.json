{
  "name": "SciPro Development Container",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/opt/conda/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "njpwerner.autodocstring",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteUser": "jovyan",
  "postCreateCommand": "pip install -r /workspace/requirements.txt || true",
  "forwardPorts": [
    8888,
    9001
  ],
  "mounts": [
    "source=/workspace,target=/home/jovyan/materials,type=bind"
  ]
}
