{
  "name": "Python Development Container",
  "dockerFile": "./Dockerfile",  // Verwende das Dockerfile im gleichen Ordner
  "postCreateCommand": "git config --global pull.rebase true",  // Setzt die Git-Konfiguration nach Container-Erstellung
  "settings": {
    "python.pythonPath": "/usr/local/bin/python3"
  },
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter",
    "ms-vscode.cpptools",
    "dbaeumer.vscode-eslint",
    "mhutchie.git-graph",
    "github.codespaces"
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/workspace/data,type=bind",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=host"  // Docker-Socket für Codespaces
  ],
  "remoteUser": "vscode",  // Setze den richtigen Benutzer, um zu gewährleisten, dass VSCode korrekt funktioniert
  "postAttachCommand": "docker --version",  // Überprüfe, ob Docker nach dem Start des Containers verfügbar ist
  "build": {
    "dockerfile": "./Dockerfile"
  }
}
