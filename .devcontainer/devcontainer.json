{
  "name": "SC-EA-Container",
  "build": {
    "dockerfile": "../Dockerfile",  // da Dockerfile im Wurzelverzeichnis ist
    "context": ".."
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/jovyan/materials,type=bind"
  ],
  "forwardPorts": [8888],
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter",
    "ms-vscode.cpptools",
    "ms-python.vscode-pylance"
  ],
  "postCreateCommand": "echo 'Container setup complete!'",
  "remoteUser": "jovyan"
}
